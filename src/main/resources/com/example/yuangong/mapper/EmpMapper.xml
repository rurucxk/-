<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.yuangong.mapper.EmpMapper">

    <sql id="common-select">
        select * from emp
    </sql>
    <update id="update2">
        update emp
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="image != null">
                image = #{image},
            </if>
            <if test="job != null">
                job = #{job},
            </if>
            <if test="entrydate != null">
                entrydate = #{entrydate},
            </if>
            <if test="deptId != null">
                dept_id = #{deptId},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
            where id = #{id}
    </update>
    <delete id="delete2">
        delete from emp where id in
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>

    </delete>
    <select id="list" resultType="com.example.yuangong.pojo.Emp">
        <include refid="common-select"/>
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">

                or name = #{name}
            </if>
        </where>
    </select>


</mapper>